@model IEnumerable<JobRole>

<h2 class="display-5 mt-3 mb-4">Lista poslovnih pozicija</h2>

<div class="row mb-2">
    <div class="col-3">
        <a class="btn btn-secondary" asp-action="CreateJobRole" asp-controller="JobRole">Dodajte novu poslovnu poziciju</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Naziv pozicije</th>
                        <th>Opis</th>
                        <th>Sektor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model)
                    {
                        <tr>
                            <td>@line.JobRoleId</td>
                            <td>@line.Title</td>
                            <td>@line.Description</td>
                            <td>@line.Department.Name</td>
                            <td class="d-flex align-content-between">
                                <a class="btn btn-warning ms-2" asp-action="EditJobRole" asp-controller="JobRole" asp-route-id="@line.JobRoleId">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-danger ms-2" asp-action="DeleteJobRole" asp-controller="JobRole" asp-route-id="@line.JobRoleId">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>