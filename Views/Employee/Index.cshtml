@model IEnumerable<Employee>

<h2 class="display-5">Lista svih zaposlenih</h2>

<div class="row mb-2">
    <div class="col-2">
        <a class="btn btn-secondary" asp-action="CreateEmployee" asp-controller="Employee">Dodajte novog zaposlenog</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Last Name</th>
                        <th>Department</th>
                        <th>Job Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model)
                    {
                        <tr>
                            <td>@line.EmployeeId</td>
                            <td>@line.FirstName</td>
                            <td>@line.LastName</td>
                            <td>@line.Department.Name</td>
                            <td>@line</td>
                            <td class="d-flex justify-content-between align-content-between">
                                <a class="btn btn-secondary" asp-action="Details" asp-controller="Employee" asp-route-id="@line.EmployeeId">
                                    <i class="bi bi-search"></i>
                                </a>
                                <a class="btn btn-warning ms-2" asp-action="EditEmployee" asp-controller="Employee" asp-route-id="@line.EmployeeId">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-danger ms-2" asp-action="DeleteEmployee" asp-controller="Employee" asp-route-id="@line.EmployeeId">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                       
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>