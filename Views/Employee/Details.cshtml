@model Employee

<h2 class="display-5 mb-4">Pregled svih podataka zaposlenog</h2>

<div class="row mb-2">
    <div class="col">
        <div class="row g-2">
            <div class="col-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="EmploymentStartDate" class="form-label"></label>
                <input asp-for="EmploymentStartDate" class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="EmploymentEndDate" class="form-label"></label>
                <input asp-for="EmploymentEndDate" class="form-control" />
            </div>
         </div>
    </div>
</div>