@model IEnumerable<Department>


<h2 class="display-5 mt-3 mb-4">Lista sektora</h2>


<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model)
                    {
                        <tr>
                            <td>@line.DepartmentId</td>
                            <td>@line.Name</td>
                            <td>@line.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>