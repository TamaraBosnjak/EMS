@model IEnumerable<Department>


<h2 class="display-5 mt-3 mb-4">Lista sektora</h2>

<div class="row mb-2">
    <div class="col-2">
        <a class="btn btn-secondary" asp-action="CreateDepartment" asp-controller="Department">Dodajte novi sektor</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Sektor</th>
                        <th>Opis</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model)
                    {
                        <tr>
                            <td>@line.DepartmentId</td>
                            <td>@line.Name</td>
                            <td>@line.Description</td>
                            <td class="d-flex align-content-between">
                                <a class="btn btn-warning ms-2" asp-action="EditDepartment" asp-controller="Department" asp-route-id="@line.DepartmentId">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-danger ms-2" asp-action="DeleteDepartment" asp-controller="Department" asp-route-id="@line.DepartmentId">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>